function imageMapping(){
   var thisURL = window.location.href
   if (thisURL == "http://toolbox.igus.com/"){
        document.getElementById("testing-2").style.visibility = 'visiable';
        document.getElementById("testing-3").style.visibility = 'visiable';
     }
   else if (thisURL !== "http://toolbox.igus.com/"){
       document.getElementById("testing-2").style.visibility = 'hidden';
       document.getElementById("testing-3").style.visibility = 'hidden';
     }
}


 Hubs.onLoad = function() {
 imageMapping();
 }

 Hubs.onPageChange = function() {
 imageMapping();
 }

 Hubs.onItemsLoaded = function() {
 imageMapping();
 }
